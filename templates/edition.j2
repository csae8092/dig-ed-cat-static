{% extends "templates/partials/base.j2" %}
{% block title%} {{ object.edition_name }} {% endblock %}
{% block content %}
<div class="panel panel-default container">
    <div class="panel-heading">
        <div class="row">
            <div class="col-md-2">
                {% if previous_entry %}
                <h2>
                    <a href="{{ previous_entry }}" style="float:left">
                        <i class="bi bi-arrow-left-circle"></i>
                    </a>
                </h2>
                {% endif %}
            </div>
            <div class="col-md-8" style="text-align:center;">
                <h2><a href="{{ object.url.data }}">{{ title }}</a></h2>
                <div class="dropdown">
                    <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink"
                        data-bs-toggle="dropdown" aria-expanded="false">
                        Download
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                        <li><a class="dropdown-item" title="Download current edition as n3 file"><b>N3</b></a></li>
                        <li><a class="dropdown-item" title="Download current edition as rdf/xml file"><b>RDF/XML</b></a></li>
                        <li><a class="dropdown-item" title="Download current edition as rdf/xml file"><b>JSON netvis</b></a></li>
                    </ul>
                </div>
            </div>
            <div class="col-md-2">
                {% if next_entry %}
                <h2>
                    <a href="{{ next_entry }}" style="float:right">
                        <i class="bi bi-arrow-right-circle"></i>
                    </a>
                </h2>
                {% endif %}
            </div>
        </div>
    </div>
    <div class="panel-body">
        <table id="example" class="table table-striped table-hover" style="width:100%">
            {% for key, value in object.items() %}
            <tr>
                <th>{{ value.label }}</th>
                <td>
                {% if value.data.startswith('http') %}
                    <a href="{{ value.data }}">{{ value.data }}</a>
                {% else %}
                    {{ value.data }}
                {% endif %}
                </td>
            </tr>
            {% endfor %}
        </table>
    </div>
</div>
{% endblock content %}